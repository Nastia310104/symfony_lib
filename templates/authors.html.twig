{% extends 'layouts/layout.html.twig' %}

{% block main %}
    <div class="container-fluid mt-4">
            <table class="table table-dark table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Number of books</th>
                    <th>Book's name</th>
                </tr>
                </thead>
                <tbody>
                {% for author in list %}
                    <tr>
                        <th>{{ author.name }}</th>
                        <th>{{ author.quantity }}</th>
                        <th>{{ author.book_name }}</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>


{% endblock %}