{% extends 'layouts/layout.html.twig' %}

{% block main %}
    <div class="container-fluid">
        {#    Flash-message#}

        {% for message in app.flashes('error') %}
            <div class="container mt-4 ">
                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </symbol>
                </svg>
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                    <div>
                        {{ message }}
                    </div>
                </div>
            </div>
        {% endfor %}

        {#    Form#}

        <div class="container-fluid">
            {{ form_start(form, { 'attr': {'class': 'input-group input-group-lg mt-4'} }) }}
{#                {{ form_row(form.name, { 'value': 'foo'}) }}#}
            {{ form_end(form) }}
        </div>


{#        New author#}

{#        <form action="{{ path('lib_new_author') }}" class="input-group input-group-lg mt-4" method="post">#}
{#            <span class="border-0 input-group-text bg-secondary text-light">Add new author</span>#}
{#            <input class="form-control" type="text" name="name" placeholder="Author name">#}
{#            <input class="form-control" type="text" name="book" placeholder="Book title">#}
{#            <button type="submit" class="btn btn-primary">Send</button>#}
{#        </form >#}

{#        Random create#}

        <form action="{{ path('lib_rand') }}" method="post" class="input-group my-4">
            <span class="border-0 input-group-text bg-secondary text-light">Create a random book</span>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>

{#        Filter#}

        <form action="{{ path('lib_authors') }}" method="post" class=" row g-3 my-3">
            <div class="col-auto">
                <span class="text-light col">Select filter:</span>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="filterRadio" id="filterRadio0" value="name">
                    <label class="form-check-label text-light" for="filterRadio0">Name</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="filterRadio" id="filterRadio1" value="quantity">
                    <label class="form-check-label text-light" for="filterRadio1">Number of books</label>
                </div>
            </div>
            <div class="col-auto">
                <input class="form-control" type="text" name="filter_option" placeholder="Filter">
            </div>
            <div class="col-auto">
                <span class="text-light col">Order by:</span>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="OrderRadio" id="OrderRadio1" value="ASC">
                    <label class="form-check-label text-light" for="OrderRadio1">Ascending </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="OrderRadio" id="OrderRadio2" value="DESC">
                    <label class="form-check-label text-light" for="OrderRadio2">Descending</label>
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-secondary">Send</button>
            </div>
        </form>

{#        Table#}

        <table class="table table-dark table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Number of books</th>
                </tr>
                </thead>
                <tbody>
                {% for author in list %}
                    <tr>
                        <th>
                            {{ author.name }}
                        </th>
                        <th>{{ author.quantity }}</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>


{% endblock %}