{% extends 'layouts/layout.html.twig' %}

{% block main %}
    <div class="container-fluid">
        <form action="{{ path('lib_add_new') }}" class="row g-3 my-3" method="post">
            <div class="col">
                <h4 class="text-light">Add new book</h4>
            </div>
            <div class="col">
                <input class="form-control" type="text" name="image" placeholder="how can i add an image?">
            </div>
            <div class="col">
                <input class="form-control" type="text" name="b_name" placeholder="Book name">
            </div>
            <div class="col">
                <input class="form-control" type="text" name="a_name" placeholder="Author name">
            </div>
            <div class="col">
                <input class="form-control" type="text" name="description" placeholder="Description">
            </div>
            <div class="col">
                <input class="form-control" type="text" name="year" placeholder="Year">
            </div>
            <div class="col">
                <button type="submit" class="btn btn-secondary">Send</button>
            </div>
        </form >
        {% if error %}
            <div class="container">
                <span>{{ error != "" }}</span>
            </div>
        {% endif %}
        <form action="{{ path('lib_books') }}" method="post" class="g-3 my-3">
            <span class="text-light col">Select filter:</span>
            {% for index, filter in filters %}
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="filterRadio" id="filterRadio{{ index }}" value="{{ filter }}">
                    <label class="form-check-label text-light" for="filterRadio{{ index }}">{{ filter }}</label>
                </div>
            {% endfor %}

            <span class="text-light col">Order by:</span>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="OrderRadio" id="OrderRadio1" value="ASC">
                <label class="form-check-label text-light" for="OrderRadio1">Ascending </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="OrderRadio" id="OrderRadio2" value="DESC">
                <label class="form-check-label text-light" for="OrderRadio2">Descending</label>
            </div>

            <input class="form-control my-3" type="text" name="filter_option" placeholder="Filter">
            <button type="submit" class="btn btn-secondary">Send</button>

        </form>

            <table class="table table-dark table-striped">
                <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Author</th>
                    <th>Description</th>
                    <th>Year</th>
                </tr>
                </thead>
                <tbody>
                    {% for book in library %}
                        <tr>
                            <th>
                                <img class="img" src="{{ book.image }}" alt="Can't load by some reason. src='{{ book.image }}'">
                            </th>
                            <th>{{ book.bName }}</th>
                            <th>{{ book.author }}</th>
                            <th>{{ book.description }}</th>
                            <th>{{ book.year }}</th>

                        </tr>
{#                        <tr>#}
{#                            <input class="form-control my-3" type="text" name="{{ book.bName }}" value="{{ book.bName }}">#}
{#Why it sets upper table?#}
{#                        </tr>#}
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>


{% endblock %}